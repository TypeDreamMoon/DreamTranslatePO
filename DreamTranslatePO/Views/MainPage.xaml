<Page
    mc:Ignorable="d"
    x:Class="DreamTranslatePO.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border CornerRadius="10">

        <Border.Background>
            <ImageBrush
                ImageSource="../Assets/background.png"
                Opacity="0.7"
                Stretch="UniformToFill" />
        </Border.Background>

        <Grid>
            <Image
                Height="256"
                HorizontalAlignment="Right"
                Margin="25"
                Source="../Assets/DreamTranslatePO.png"
                VerticalAlignment="Top"
                Width="256" />


            <StackPanel Spacing="25" x:Name="ContentArea">

                <TextBlock
                    FontSize="50"
                    FontWeight="Bold"
                    Margin="75,50,0,0"
                    Text="Dream Translate PO" />

            </StackPanel>

            <Border
                Background="{ThemeResource SystemControlAcrylicElementBrush}"
                CornerRadius="10"
                HorizontalAlignment="Right"
                Margin="25"
                Padding="10"
                VerticalAlignment="Bottom">
                <StackPanel Spacing="10">
                    <Button
                        Click="QuickStartPoButton_OnClick"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Name="QuickStartPoButton">
                        <Grid ColumnDefinitions="Auto, *" ColumnSpacing="5">
                            <Image
                                Grid.Column="0"
                                Height="25"
                                HorizontalAlignment="Left"
                                Margin="0,0,5,0"
                                Source="../Assets/MaterialSymbolsArrowLeftAlt.svg"
                                Width="25" />
                            <TextBlock
                                FontSize="20"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Text="开始Po文件翻译"
                                VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <Button
                        Click="QuickStartCsvButton_OnClick"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Name="QuickStartCsvButton">
                        <Grid ColumnDefinitions="Auto, *" ColumnSpacing="5">
                            <Image
                                Grid.Column="0"
                                Height="25"
                                Margin="0,0,5,0"
                                Source="../Assets/MaterialSymbolsArrowLeftAlt.svg"
                                Width="25" />
                            <TextBlock
                                FontSize="20"
                                Grid.Column="1"
                                Text="开始CSV翻译"
                                TextAlignment="Right"
                                VerticalAlignment="Center" />
                        </Grid>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Page>